        <TextBox x:Name="textBox"  ScrollViewer.VerticalScrollBarVisibility="Auto" HorizontalAlignment="Left" Height="465" Margin="10,44,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="497" TextChanged="textBox_TextChanged"/>
